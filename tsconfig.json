{
  "compilerOptions": {
    "noEmit": true, // Evita que TypeScript emita archivos .js
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
